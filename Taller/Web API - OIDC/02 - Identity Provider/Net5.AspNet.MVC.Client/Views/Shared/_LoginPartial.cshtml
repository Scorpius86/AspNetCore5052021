@using Microsoft.AspNetCore.Identity

@if (User.Identity.IsAuthenticated)
{
    <div class="dropdown">
        @User.Identity.Name
        <button class="rounded-circle border-0" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width:52px;height:52px;">
            <img style="width:36px;height:36px;" alt="" data-profile-property="avatarUrl"
                 src="data:image/svg+xml;base64,">
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <div class="dropdown-item">
                <form id="logoutForm" method="post" class="form-inline" asp-controller="Account" asp-action="SignOut" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="w-100 border-0 bg-transparent text-left">Sign-Out</button>
                </form>
            </div>
        </div>
    </div>

}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <form method="post" asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@Url.Action("Index", "Home")">
                <button id="logout" type="submit" class="btn btn-sm btn-outline-secondary">Sign-In</button>
            </form>
        </li>
    </ul>

}
