@model List<PostViewModel>
@{
    ViewData["Title"] = "Index";
}

@foreach (PostViewModel post in Model)
{
<div class="card">
    <div class="card-body">
        <div id="allHolder">
            <div id="postHolder">
                <div class="post">
                    <div class="card-title">
                        <h3>
                            <a class="post-title entry-title" asp-controller="Blog" asp-action="PostDetails" asp-route-id="@post.PostId">@post.Titulo</a>
                        </h3>
                    </div>
                    <div class="postmeta-primary">
                        <span class="meta_pbtauthor">
                            By&nbsp;<a href="#" rel="author" title="author profile">@post.UsuarioPropietario.FullName</a>
                        </span>&nbsp;
                        <span class="meta_date">@post.FechaActualizacion</span>&nbsp;
                        <span class="meta_comments">
                            <a href="#" onclick="">@post.Comentarios.Count comments</a>
                        </span>
                    </div>
                    <div class="post-body entry-content">
                        <div>
                            @Html.Raw(post.Resumen)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="postButtonHolder card-footer text-right" id="postButtonHolder">
        <div class="postActions">
            <div id="subscribeButtonHolder" class="container" style="display: none;">
                <span id="subscribeButton" class="notifyMeCheckbox"></span>
                <label for="subscribeButton" class="checkboxLabel">Notify me</label>
            </div>

            <a asp-controller="Blog" asp-action="DeletePost" asp-route-id="@post.PostId" class="btn btn-danger bg-danger text-white border-danger"><span class="fa fa-trash"></span> Delete</a>
            <a asp-controller="Blog" asp-action="EditPost" asp-route-id="@post.PostId" class="btn btn-primary bg-primary text-white border-primary"><span class="fa fa-edit"></span> Edit</a>
            <a asp-controller="Blog" asp-action="PostDetails" asp-route-id="@post.PostId" class="btn btn-success bg-success text-white border-success">Read More</a>
        </div>
    </div>
</div>
<br />
}


