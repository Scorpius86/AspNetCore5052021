@{
    ViewData["Title"] = "Home Page";
}

<h3 class="title">Claims</h3> 

@if (User.Identity.IsAuthenticated)
{
    <table class="table table-sm table-bordered">
        <tr>
            <th>Subject</th>
            <th>Issuer</th>
            <th>Type</th>
            <th>Value</th>
        </tr>

        @foreach (var claim in User.Claims.OrderBy(x => x.Type))
        {
            <tr>
                <td>@claim.Subject.Name</td>
                <td>@claim.Issuer</td>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </table>
}

